@model IEnumerable<THLab3BTVN.Models.Product>

    @* <p>Hello world</p> *@

<div class="mb-4 border border-2 border-primary">
    <div class="card-header bg-primary text-white">Sản phẩm mới nhất</div>
    <div class="card-body row">
        @foreach (var item in Model)
        {
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-4">
                <div class="img-thumbnail">
                    <img src="@item.Image" alt="" height="180" />
                    <div class="ps-3">
                        <p class="" style="margin: 20px 0 20px; font-weight: 400;">
                            @item.Title
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>