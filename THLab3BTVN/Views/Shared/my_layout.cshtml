@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>THLab 3 BTVN - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/THLab3BTVN.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">DEMO LAB</a>
            <ul class="nav navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Product" asp-action="Index">Trang chu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Product" asp-action="Index">Gioi thieu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Product" asp-action="Index">Lien he</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Product" asp-action="Index">San pham</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Container -->
    <div class="container mt-3">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3">
                <partial name="_PartialMenu" />
            </div>

            <!-- Content -->
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light p-3 mt-3">
        <div class="container row">
            <div class="col-md-6">
                <h5>GIOI THIEU</h5>
                <p>Lorem ipsum dolor sit amet consectetur...</p>
            </div>
            <div class="col-md-6">
                <h5>LIEN HE</h5>
                <p>Hotline: 0123 456 789<br />Email: support@example.com</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>