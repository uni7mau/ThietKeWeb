@model IEnumerable<THLab3.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<h2>Danh sach cac cuon sach</h2>
<form action="" method="post" class="d-flex align-items-center mb-3 gap-2" role="form">
    <select name="AuthorId" class="form-select w-auto" asp-items="@ViewBag.authors">
        <option value="">Chon tac gia</option>
    </select>
    <select name="GenreId" class="form-select w-auto" asp-items="@ViewBag.genres">
        <option value="">Chon the loai</option>
    </select>
    <button type="submit" class="btn btn-primary">Tim kiem</button>
    <a asp-action="Create" class="btn btn-danger">Them moi</a>
</form>

<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tieu de</th>
            <th>Tac gia</th>
            <th>The loai</th>
            <th>Gia</th>
            <th>Hinh anh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.AuthorId</td>
                <td>@book.GenreId</td>
                <td>@book.Price</td>
                <td>
                    <img src="@book.Image" alt="@book.Title" width="40"/>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-primary">Sua</a>
                </td>
            </tr>
        }

    </tbody>
</table>