@model IEnumerable<THLab3.Models.Book>

@foreach(var item in Model)
{
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <div class="img-thumbnail d-flex">
            <img src="@item.Image" alt="" height="200" />
            <div class="ps-3">
                <p class="fw-bold">
                    @item.Title
                </p>
                <p>
                    Price: @item.Price
                </p>
            </div>
        </div>
    </div>
}